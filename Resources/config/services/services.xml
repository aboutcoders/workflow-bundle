<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="abc.workflow.twig.workflow_extension.class">Abc\Bundle\WorkflowBundle\Twig\WorkflowExtension</parameter>
        <parameter key="abc.workflow.task.form.mailer.class">Abc\Bundle\WorkflowBundle\Form\Task\MailerType</parameter>
        <parameter key="abc.workflow.executable.workflow.class">Abc\Bundle\WorkflowBundle\Executable\WorkflowExecutable</parameter>
        <parameter key="abc.workflow.menu.builder.class">Abc\Bundle\WorkflowBundle\Menu\MenuBuilder</parameter>
        <parameter key="abc.workflow.menu.item.class">Knp\Menu\MenuItem</parameter>
    </parameters>

    <services>
        <service id="abc.workflow.workflow_extension" class="%abc.workflow.twig.workflow_extension.class%">
            <argument type="service" id="service_container"/>
            <argument type="service" id="translator"/>
            <tag name="twig.extension"/>
        </service>

        <service id="abc.workflow.task.form.mailer" class="%abc.workflow.task.form.mailer.class%">
            <tag name="abc.workflow.task.form" />
        </service>

        <service id="abc.workflow.executable.workflow" class="%abc.workflow.executable.workflow.class%">
            <argument type="service" id="abc_workflow.task_manager" />
            <tag name="abc.job.listener" type="workflow" level="debug" />
        </service>


        <service id="abc.workflow.job_listener" class="Abc\Bundle\WorkflowBundle\Listener\WorkflowFilesystemListener" public="true">
            <argument type="service" id="abc.file_distribution.manager" />
            <argument type="service" id="abc.workflow.filesystem" />
            <tag name="abc.job.event_listener" event="abc.job.prepare" method="onJobPrepare"/>
        </service>

        <service id="abc.workflow.filesystem" class="Abc\File\Filesystem" public="false">
            <call method="setType">
                <argument type="string">Filesystem</argument>
            </call>
            <call method="setPath">
                <argument type="string">/tmp/workflow</argument>
            </call>
        </service>

    </services>
</container>