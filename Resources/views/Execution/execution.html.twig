<div class="progress progress-striped active" id="progressouter">
    <div class="progress-bar" role="progressbar" aria-valuenow="{{ progress }}" aria-valuemin="0"
         aria-valuemax="100" style="width: {{ progress }}%;">
        {{ progress }}%
    </div>
</div>
<table class="table">
    <tbody>
    <tr>
        <td colspan="2">
            {{ include('AbcWorkflowBundle:Execution:executionStatusLink.html.twig', { item: entity }) }} {{ report.status }}
            <a href="#" class="btn btn-xs history-details"
               data-url="{{ path('workflow_execution', { 'id': entity.id }) }}"> {{ 'Refresh'|trans }}</a></td>
    </tr>
    <tr>
        <th>{{ 'Execution time'|trans }}</th>
        <td>{{ report.executionTime }}</td>
    </tr>
    <tr>
        <th>{{ 'Ticket'|trans }}</th>
        <td>{{ entity.ticket }}</td>
    </tr>
    <tr>
        <th>{{ 'Created'|trans }}</th>
        <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
    </tr>
    </tbody>
</table>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">{{ 'Logs'|trans }}</h3>
    </div>
    <div class="panel-body pre-scrollable">
        <samp style="font-size: 11px;">{{ report.log|nl2br }}</samp>
    </div>
</div>
<script>
    jQuery(document).ready(function () {
        var $progressPump = setInterval(function () {
            /* query the completion percentage from the server */
            jQuery.get("{{ path('workflow_execution_status', { 'id': entity.id }) }}", function (data) {
                var $progress = jQuery("#progress");
                /* update the progress bar width */
                $progress.css('width', data.progress + '%');
                /* and display the numeric value */
                $progress.html(data.message + '%');

                /* test to see if the job has completed */
                if (data > 99.999) {
                    clearInterval($progressPump);
                    jQuery("#progressouter").removeClass("active");
                    $progress.html("Done");
                }
            })
        }, 1000);
    });
</script>
{% javascripts
"bundles/abcworkflow/js/workflow-history.js"
filter='cssrewrite'
filter='?jsmin'
output="js/compiled/global/main.js" %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}